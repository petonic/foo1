#!/bin/bash

debuglog=true
set -x


function finishProc {
  # Your cleanup code here
  echo "Cleaning up"
  killall -q /usr/bin/python  python
  # killall -q chromium-browser
}

trap finishProc EXIT SIGINT SIGTERM

projDir="$HOME/git/pithy"

cd "$projDir"

echo "debuglog is <$debuglog>"

if [ ! $debuglog ]; then
  webserv.py &
  ./runBrowser
else
  webserv.py &
  ./runBrowser &
  lf="logs/debug_`date -I | sed 's/-//g'`.log"
  tail -f "$lf"
fi
